
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  lastname String
  email String @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  rules Rules[]
  @@index([email])
}

model Rules {
  id String @id @default(uuid())
  name String @default("user")
  user User? @relation(fields: [userId], references: [id])
  userId String 
}
